generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  email    String
  password String
  phone    String
  location String
  role     Int       @default(0)
  mapping  mapping[] 
}

model products {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String    @unique
  modelPic String[]
  modelId   String[]
  count    Int       @default(10)
  category String
  isFeatured Boolean
  mapping  mapping[]
  description String
  rating      Float
  price       Int 
  reviews     reviews[]

}

model mapping {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  product    products @relation(fields: [productId], references: [id])
  user       users    @relation(fields: [userId], references: [id])
  productId  String   @db.ObjectId
  userId     String   @db.ObjectId
  count      Int 
}



model reviews {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  productId  String   @db.ObjectId
  userId     String   @db.ObjectId
  rating     Int      @default(0)
  comment    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  product    products @relation(fields: [productId], references: [id])
}






